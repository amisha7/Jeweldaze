@model jewellery_project.Models.Admin
@{
    ViewBag.Title = "State";
    Layout = "~/Views/Shared/admin_master.cshtml";
}

@using (Html.BeginForm("State", "admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    
     @Html.AntiForgeryToken()  
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
   @Html.HiddenFor(m => m.s_id)
 <section id="main-content">
        <section class="wrapper">
          <div class="form-w3layouts">
    <!-- page start-->
    <!-- page start-->
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    State
                </header>
                <div class="panel-body">
                    <div class="position-center">
                                <form role="form">

                                        <div class="form-group">
                                            <label for="state">State</label>
                                            @*<input type="text" class="form-control" id="state" placeholder="Enter state">*@
                                            @Html.TextBoxFor(m => m.name, new { @class = "form-control", @required="" } )
                                        </div>



                                        <input type="submit" class="btn btn-info" value="Submit">
                                        @*<button type="submit" class="btn btn-info">Submit</button>*@
                                    </form>
                                </div>

                            </div>
                        </section>

                    </div>

                </div>


                 @*page end*@
            </div>
            <div class="table-agile-info">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        State table
                    </div>
                    <div>
                        <table class="table" ui-jq="footable" ui-options='{
        "paging": {
          "enabled": true
        },
        "filtering": {
          "enabled": true
        },
        "sorting": {
          "enabled": true
        }}'>
                            <thead>
                                <tr>
                                    <th data-breakpoints="xs">ID</th>
                                    <th>State Name</th>
                                    <th data-breakpoints="xs">DOC</th>

                                    <th data-breakpoints="xs sm md" data-title="DOB">DOM</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.rj)
                                {
                                    <tr data-expanded="true">
                                        <td>@item.s_id</td>
                                        <td>@item.name</td>
                                        <td>@item.DOC</td>
                                        <td>@item.DOM</td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit_state", new { @id = item.s_id })
                                    </td>
                                        <td>@Html.ActionLink("Delete", "Delete_state", new { @id = item.s_id })
                                        </td>
                            </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </section>

    </section>

}