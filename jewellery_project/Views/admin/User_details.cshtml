@model jewellery_project.Models.Admin

@{
    ViewBag.Title = "User_details";
    Layout = "~/Views/Shared/admin_master.cshtml";
}

@using (Html.BeginForm("User_details", "admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(m => m.user_id)
    <section id="main-content">
        <section class="wrapper">

            <div class="table-agile-info">
                <div class="panel panel-default" style="overflow:scroll">
                    <div class="panel-heading">
                        User Details
                    </div>
                    <div>
                        <table class="table" ui-jq="footable" ui-options='{
        "paging": {
          "enabled": true
        },
        "filtering": {
          "enabled": true
        },
        "sorting": {
          "enabled": true
        }}'>
                            <thead>
                                <tr>
                                    <th data-breakpoints="xs">ID</th>
                                    <th>First Name</th>
                                    <th>Middle Name</th>
                                    <th>Last Name</th>
                                    <th>Gender</th>
                                    <th>State</th>
                                    <th>City</th>
                                    <th>Address</th>
                                    <th>Mobile</th>
                                    <th>Email</th>
                                    <th>Status</th>
                                    <th>isActive</th>
                                    <th data-breakpoints="xs">DOC</th>

                                    <th data-breakpoints="xs sm md" data-title="DOB">DOM</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.rjd)
                                {
                                    <tr data-expanded="true">
                                        <td>@item.user_id</td>
                                        <td>@item.fname</td>
                                        <td>@item.mname</td>
                                        <td>@item.lname</td>
                                        <td>@item.gender</td>
                                        <td>@item.state_id</td>
                                        <td>@item.city_id</td>
                                        <td>@item.address</td>
                                        <td>@item.mobile</td>
                                        <td>@item.email</td>
                                        <td>@item.status</td>
                                        <td>
                                            <a href="@Url.Action("statustrue", "admin", new { @id = item.user_id })"> <i class="glyphicon glyphicon-ok"></i></a><br />
                                            <a href="@Url.Action("statusfalse", "admin", new { @id = item.user_id })"> <i class="glyphicon glyphicon-remove"></i></a>


</td>

                                        <td>@item.DOC</td>
                                        <td>@item.DOM</td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </section>

    </section>
}

